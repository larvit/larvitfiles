<%= _.render('inc/head', obj) %>
<%= _.render('inc/pageTop', obj) %>
<form method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="six columns">
			<label for="uuid">Uuid</label>
			<input class="u-full-width" type="text" name="uuid" readonly="readonly" value="<%= obj.global.urlParsed.query.uuid %>" />
		</div>
	</div>

	<div class="row">
		<div class="six columns">
			<label for="slug">Slug (file path, prefixed with <%= obj.prefix %>)</label>
			<input class="u-full-width" type="text" name="slug" value="<%= obj.global.formFields.slug %>" />
		</div>

		<div class="six columns">
			<label for="fileData">File:</label>
			<input type="file" name="fileData" />
		</div>
	</div>

	<% if (global.urlParsed.query.uuid) { %>
		<div class="row">
			<p>Full file path: <%= obj.prefix %><%= obj.global.formFields.slug %></p>
		</div>
	<% } %>

	<h2>Metadata</h2>
	<% var i; %>
	<% if (obj.global.formFields.metaDataName) { for (i = 0; obj.global.formFields.metaDataName[i] !== undefined; i++) { %>
		<div class="row">
			<div class="six columns">
				<label for="metaDataName[]">Metadata name</label>
				<input class="u-full-width" type="text" name="metaDataName[]" value="<%= obj.global.formFields.metaDataName[i] %>" />
			</div>

			<div class="six columns">
				<label for="metaDataValue[]">Metadata value</label>
				<input class="u-full-width" type="text" name="metaDataValue[]" value="<%= obj.global.formFields.metaDataValue[i] %>" />
			</div>
		</div>
	<% }} %>

	<div class="row">
		<div class="six columns">
			<label for="metaDataName[]">Metadata name</label>
			<input class="u-full-width" type="text" name="metaDataName[]" value="" />
		</div>

		<div class="six columns">
			<label for="metaDataValue[]">Metadata value</label>
			<input class="u-full-width" type="text" name="metaDataValue[]" value="" />
		</div>
	</div>

	<div class="row">
		<button type="submit" name="save">Save</button>
		<% if (global.urlParsed.query.uuid) { %>
			<button type="submit" name="delete" class="button left warning" value="true">Delete file</button>
		<% } %>
	</div>
</form>
<%= _.render('inc/pageBottom', obj) %>
